{
  "name": "B(ia)S Detector",
  "version": "1.0",
  "description": "Detect hyperpartisan bias in news articles",
  "manifest_version": 2,

  "content_scripts": [
      {
          "matches": [
              "<all_urls>"
          ],
          "js": [
              "content.js"
          ],
          "run_at": "document_end"
      }
  ],


  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "highlighted words page"
  }
}
